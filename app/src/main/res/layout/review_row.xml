<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/reviewrow_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/review_example" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="22dp"
        android:text="Seat:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/reviewrow_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:text="Review:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/reviewrow_img"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:text="Rate:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/reviewrow_seat_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewrow_seat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:text="A19"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/reviewrow_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="77dp"
        android:layout_height="19dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:contextClickable="false"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewrow_review_tv"
        android:layout_width="210dp"
        android:layout_height="81dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:text="Seat A19 is the end seat to an aisle so good for people that need the extra room to the right for leg stretch etc.rnExcellent views from A19 and A20"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

</androidx.constraintlayout.widget.ConstraintLayout>